# GitHub Token for AI Level Generation
# Get your token from: https://github.com/settings/tokens
# Required scopes: No specific scopes needed for GitHub Models
GITHUB_TOKEN=your_github_token_here

# AI Model Configuration
AI_MODEL=openai/gpt-4.1-mini
AI_ENDPOINT=https://models.github.ai/inference

# Server Configuration
PORT=3000
NODE_ENV=development

# Feature Flags
ENABLE_AI_LEVELS=true
AI_CACHE_TTL=3600
AI_MAX_RETRIES=3

# Optional: For production, you can switch to Azure AI Foundry
# AZURE_ENDPOINT=your_azure_foundry_endpoint
# AZURE_API_KEY=your_azure_api_key
# AI_MODEL=your_deployed_model_name

# OAuth2 Configuration (Leaderboard Feature)
# GitHub OAuth2 App: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here

# Google OAuth2 App: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Microsoft OAuth2 App: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here

# Session Configuration (Leaderboard Feature)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=generate_a_random_string_here

# Server Configuration (Leaderboard Feature)
CALLBACK_URL=http://localhost:3000

# Database Configuration (Leaderboard Feature)
DATABASE_PATH=./server/database/leaderboard.db